<div class="form-container">
	<form>
		<div class="container">
			<div class="row">
				{% import 'functions.html' as forms %}
				{% for item in contact.form %}
					<div class="{{ item.gclass }}">
						{% if item.label is defined %}
							<label for="{{ item.for }}">{{ item.label }}</label>
						{% endif %}
						{% if item.type == 'text' %}
							{{ forms.textfield(item.name,item.class,item.placeholder) }}
						{% elseif item.type == 'submit' %}
							{{ forms.button(item.name,item.class,item.value) }}
						{% elseif item.type == 'opt' %}
							{{ forms.options(item.id,item.class,item.op) }}
						{% elseif item.type == 'textarea' %}
							{{ forms.textarea(item.name,item.class,item.rows, item.placeholder) }}
						{% else %}
							{{ forms.input(item.name,item.class,item.type,item.placeholder) }}
						{% endif %}
						
					</div>
				{% endfor %}
			</div>
		</div>
	</form>
</div>
